{
  "compilerOptions": {
    /* ★ 关键：按 Node 规则逐级向上找 node_modules */
    "moduleResolution": "node",

    /* ★ 关键：让所有子包以仓库根为基准 */
    "baseUrl": ".",

    /* ★ 关键：把根级 node_modules 映射给所有子包 */
    "paths": {
      "*": ["node_modules/*", "../node_modules/*"]
    },

    /* 其余保持原有严格设置即可 */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
